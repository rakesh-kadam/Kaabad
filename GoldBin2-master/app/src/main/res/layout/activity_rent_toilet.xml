<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentToilet">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Address_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/Address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Address" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/gender_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:fontFamily="Enter Password"
        android:fontFeatureSettings="Enter Password"
        android:paddingRight="15dp"
        android:text="Type"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/Type_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="85dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@+id/gender_textview"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Type_radio_group"
            android:checked="true"
            android:paddingRight="10dp"
            android:text="Government" />

        <RadioButton
            android:id="@+id/female_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_alignTop="@+id/Type_radio_group"
            android:layout_alignEnd="@+id/Type_radio_group"
            android:text="private" />
    </RadioGroup>

    <Button
        android:id="@+id/getLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="271dp"
        android:background="@color/colorAccent"
        android:padding="20dp"
        android:text="Get Coordinate"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/Lat_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="155dp"
        android:text="latitude"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/Lng_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        android:text="longitude"
        android:textSize="20sp" />


    <Button android:id="@+id/SaveLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save Toilet"
        android:background="@color/colorAccent"
        android:layout_marginTop="350dp"
        android:textColor="@android:color/white"/>



</RelativeLayout>