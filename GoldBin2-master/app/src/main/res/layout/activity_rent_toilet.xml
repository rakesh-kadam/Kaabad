<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentToilet">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Address_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp">

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/getLocation"
        android:layout_width="147dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="227dp"
        android:layout_marginLeft="227dp"
        android:layout_marginTop="132dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Detect Coordinate"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/latitude"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="108dp"
        android:inputType="none"
        android:hint="latitude"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/longitude"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="168dp"
        android:inputType="none"
        android:hint="longitude"
        android:textSize="20sp" />


    <Button
        android:id="@+id/SaveTreeLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="550dp"
        android:background="@color/colorAccent"
        android:padding="5dp"
        android:text="Save Tree"
        android:textColor="@android:color/white" />

    <View
        android:id="@+id/hrLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignTop="@+id/Address_input_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="17dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/pinPoint"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/latitude"
        android:layout_alignLeft="@+id/latitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@string/mr_chooser_title"
        android:text="Pin-Point Location"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/insertTree"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:lineSpacingExtra="8sp"
        android:text="Insert Tree"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:visibility="visible" />

    <EditText
        android:id="@+id/Tree_Name"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="245dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Tree/Plant Name" />

    <EditText
        android:id="@+id/Tree_type"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Tree_Type_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="184dp"
        android:inputType="textPersonName"
        android:hint="Type of Plant" />


</RelativeLayout>